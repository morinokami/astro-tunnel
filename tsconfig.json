{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "moduleResolution": "Node16",
    "target": "ESNext",
    "module": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  }
}
